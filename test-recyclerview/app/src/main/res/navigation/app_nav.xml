<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.testrecyclerview.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_LAFragment"
            app:destination="@id/LAFragment" />
        <action
            android:id="@+id/action_startFragment_to_clickInterfaceFragment"
            app:destination="@id/widgetsInterfaceFragment" />
        <action
            android:id="@+id/action_startFragment_to_oneWidgetInterfaceFragment"
            app:destination="@id/oneWidgetInterfaceFragment" />
        <action
            android:id="@+id/action_startFragment_to_recyDotAdapterFragment"
            app:destination="@id/recyDotAdapterFragment" />
    </fragment>
    <fragment
        android:id="@+id/LAFragment"
        android:name="com.example.testrecyclerview.listadapter.LAFragment"
        android:label="fragment_l_a"
        tools:layout="@layout/fragment_l_a" />
    <fragment
        android:id="@+id/widgetsInterfaceFragment"
        android:name="com.example.testrecyclerview.widgetsinterface.WidgetsInterfaceFragment"
        android:label="fragment_click_interface"
        tools:layout="@layout/fragment_widgets_interface" />
    <fragment
        android:id="@+id/oneWidgetInterfaceFragment"
        android:name="com.example.testrecyclerview.onewidget.OneWidgetInterfaceFragment"
        android:label="fragment_one_widget_interface"
        tools:layout="@layout/fragment_one_widget_interface" />
    <fragment
        android:id="@+id/recyDotAdapterFragment"
        android:name="com.example.testrecyclerview.recyclerdotadapter.RecyDotAdapterFragment"
        android:label="fragment_recy_dot_adapter"
        tools:layout="@layout/fragment_recy_dot_adapter" />
</navigation>