<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".workoutstest1.WorkoutsTest1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clear_texts_btn" />

        <Button
            android:id="@+id/clear_texts_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear texts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/add_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add group"
            app:layout_constraintStart_toEndOf="@+id/group_et"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/delete_group_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="x"
            app:layout_constraintStart_toEndOf="@+id/add_group_btn"
            app:layout_constraintTop_toTopOf="@+id/add_group_btn" />

        <EditText
            android:id="@+id/workout_title_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="workout"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_et" />

        <Button
            android:id="@+id/lock_workout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lock name"
            app:layout_constraintStart_toEndOf="@+id/workout_title_et"
            app:layout_constraintTop_toBottomOf="@+id/add_group_btn" />

        <Button
            android:id="@+id/delete_workout_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="x"
            app:layout_constraintStart_toEndOf="@+id/lock_workout_btn"
            app:layout_constraintTop_toTopOf="@+id/lock_workout_btn" />

        <TextView
            android:id="@+id/set_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set 1"
            app:layout_constraintBottom_toBottomOf="@+id/reps_txt_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reps_txt_1" />

        <EditText
            android:id="@+id/reps_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="repsssss"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@+id/set_txt_1"
            app:layout_constraintTop_toBottomOf="@+id/workout_title_et" />

        <EditText
            android:id="@+id/weight_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="weighttttttt"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reps_txt_1"
            app:layout_constraintTop_toTopOf="@+id/reps_txt_1" />

        <Button
            android:id="@+id/delete_set_1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            app:layout_constraintStart_toEndOf="@+id/weight_txt_1"
            app:layout_constraintTop_toBottomOf="@+id/lock_workout_btn" />

        <TextView
            android:id="@+id/set_txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set 2"
            app:layout_constraintBottom_toBottomOf="@+id/reps_txt_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reps_txt_2" />

        <EditText
            android:id="@+id/reps_txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="repsssss"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@+id/set_txt_2"
            app:layout_constraintTop_toBottomOf="@+id/reps_txt_1" />

        <EditText
            android:id="@+id/weight_txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="weighttttttt"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reps_txt_2"
            app:layout_constraintTop_toTopOf="@+id/reps_txt_2" />

        <Button
            android:id="@+id/delete_set_2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            app:layout_constraintStart_toEndOf="@+id/weight_txt_1"
            app:layout_constraintTop_toTopOf="@+id/weight_txt_2" />

        <TextView
            android:id="@+id/set_txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set 3"
            app:layout_constraintBottom_toBottomOf="@+id/reps_txt_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reps_txt_3" />

        <EditText
            android:id="@+id/reps_txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="repsssss"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@+id/set_txt_3"
            app:layout_constraintTop_toBottomOf="@+id/reps_txt_2" />

        <EditText
            android:id="@+id/weight_txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="weighttttttt"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reps_txt_3"
            app:layout_constraintTop_toTopOf="@+id/reps_txt_3" />

        <Button
            android:id="@+id/delete_set_3_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            app:layout_constraintStart_toEndOf="@+id/weight_txt_1"
            app:layout_constraintTop_toBottomOf="@+id/weight_txt_2" />

        <EditText
            android:id="@+id/group_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="group"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/get_groups_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fetch groups"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clear_texts_btn" />

        <Button
            android:id="@+id/get_workouts_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fetch workouts"
            app:layout_constraintStart_toEndOf="@+id/get_groups_btn"
            app:layout_constraintTop_toBottomOf="@+id/clear_texts_btn" />

        <Button
            android:id="@+id/get_sets_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fetch sets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/get_workouts_btn" />

        <Button
            android:id="@+id/get_workouts_of_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get_workouts_of_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/get_sets_of_workout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get_sets_of_workout"
            app:layout_constraintBottom_toTopOf="@+id/get_workouts_of_group_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/get_next_set_num_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get_next_set_num"
            app:layout_constraintBottom_toTopOf="@+id/get_sets_of_workout_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/group_has_workouts_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="group_has_workouts"
            app:layout_constraintBottom_toTopOf="@+id/get_next_set_num_btn"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>